<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="3dp">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingEnd="10dp">


        <TextView
            android:id="@+id/job_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="bottom"
            android:maxLines="1"
            android:padding="3dp"
            android:text="TextView"
            android:textColor="@color/PrimaryColorText"
            android:textSize="17sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="10dp">

            <TextView
                android:id="@+id/job_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/SecondaryColorDark"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="2dp"
                android:text="TextView"
                android:textColor="@color/PrimaryColorText"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/job_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="1dp"
                android:text="TextView"
                android:textColor="@color/PrimaryColorText"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/job_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:padding="1dp"
                android:text="TextView"
                android:textColor="@color/PrimaryColorText"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/job_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/PrimaryColorText"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/black" />

        <TextView
            android:id="@+id/job_career"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/PrimaryColorLight"
            android:gravity="center"
            android:maxLines="1"
            android:ellipsize="end"
            android:padding="3dp"
            android:text="name"
            android:textColor="@color/PrimaryColorText"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>