<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/PrimaryColor"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/PrimaryColorText"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/gotham_medium"
            android:text="@string/hash" />

        <Space
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/hash_item_title_underline"
                android:layout_width="wrap_content"
                android:layout_height="7dp"
                android:layout_gravity="bottom"
                android:background="@color/SecondaryColorDark"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hash_item_title_dummy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/gotham_medium"
                    android:text="TextView"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />
            </LinearLayout>

            <TextView
                android:id="@+id/hash_item_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/PrimaryColorText"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/gotham_medium"
                android:text="TextView" />
        </FrameLayout>


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hash_item_recycler_view"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>