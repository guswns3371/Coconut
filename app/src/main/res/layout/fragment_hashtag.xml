<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="viewModel"
            type="com.example.coconut.ui.main.hashtag.HashTagViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/PrimaryColor"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hash_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:overScrollMode="never"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hash_left_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="@color/PrimaryColorDark"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/to_left"
                    android:textColor="@color/PrimaryColorLightText"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/hash_right_btn_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:background="@color/PrimaryColorDark"
                    android:fontFamily="@font/gotham_medium"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="@string/to_right"
                    android:textColor="@color/PrimaryColorLightText"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>



        </FrameLayout>


    </LinearLayout>
</layout>
