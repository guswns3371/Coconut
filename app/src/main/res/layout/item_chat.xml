<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent_00"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/not_mine_linear"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_gravity="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="37dp"
            android:layout_height="37dp"
            app:cardBackgroundColor="@color/transparent_00"
            app:cardCornerRadius="15dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/chat_user_image_nm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/account" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_user_name_nm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13dp"
                    android:textColor="@color/chat_around_text_color"
                    android:paddingBottom="2dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="Name" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/chat_content_text_nm"

                        android:textIsSelectable="true"
                        android:linksClickable="true"
                        android:autoLink="web"

                        android:background="@drawable/chat_round_not_mine"

                        android:padding="8dp"

                        android:textSize="15sp"
                        android:textColor="@color/chat_content_text_color"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="250dp"
                        android:maxHeight="550dp"
                        android:text="TextView" />

                    <ImageView
                        android:id="@+id/chat_content_image_nm"
                        android:visibility="gone"
                        android:layout_width="260dp"
                        android:layout_height="260dp"

                        android:scaleType="centerCrop"
                        android:background="@drawable/image_round"
                        app:srcCompat="@drawable/black" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_gravity="bottom"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/chat_read_count_nm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/chat_around_text_color"
                            android:textStyle="bold"
                            android:textSize="10dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:layout_gravity="bottom"
                             />

                        <TextView
                            android:id="@+id/chat_time_nm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/chat_around_text_color"
                            android:textSize="10dp"
                            android:paddingStart="2dp"
                            android:paddingEnd="2dp"
                            android:layout_gravity="bottom"
                            android:text="Time" />
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/mine_linear"
        android:layout_weight="1"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
  >


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingEnd="5dp">

                <TextView
                    android:id="@+id/chat_read_count_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:textSize="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"

                    android:textColor="@color/chat_around_text_color"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chat_time_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|bottom"
                    android:textSize="10dp"
                    android:paddingStart="2dp"
                    android:paddingEnd="2dp"
                    android:text="Time"
                    android:textColor="@color/chat_around_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chat_content_text_mine"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoLink="web"

                    android:background="@drawable/chat_round_mine"
                    android:linksClickable="true"
                    android:maxWidth="250dp"
                    android:maxHeight="550dp"

                    android:padding="8dp"

                    android:text="TextView"
                    android:textColor="@color/chat_content_text_color"
                    android:textIsSelectable="true"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/chat_content_image_mine"
                    android:layout_width="280dp"
                    android:layout_height="280dp"
                    android:background="@drawable/image_round"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:visibility="gone"
                    app:srcCompat="@drawable/black" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>